<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View"
                   name="spirit.skroutz.reviews"
                   template="Spirit_Skroutz::reviews.phtml"
                   ifconfig="spirit_skroutz/analytics/status"
                   group="detailed_info">
                <arguments>
                    <argument name="css_class" xsi:type="string">skroutz-reviews</argument>
                    <argument name="at_label" xsi:type="string">none</argument>
                    <argument name="title" translate="true" xsi:type="string">Skroutz Reviews</argument>
                    <argument name="sort_order" xsi:type="string">100</argument>
                    <argument name="config" xsi:type="object">Spirit\Skroutz\ViewModel\Config</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
